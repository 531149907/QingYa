<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.xuan.qingya.Common.View.BannerView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin"
            android:text="分类"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/articleEntry"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:cardCornerRadius="0dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical|left"
                android:scaleType="center"
                android:src="@drawable/ic_book_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left|top"
                android:layout_marginLeft="72dp"
                android:paddingTop="12dp"
                android:text="阅读"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left|bottom"
                android:layout_marginLeft="72dp"
                android:paddingBottom="14dp"
                android:text="文章、诗词、图文欣赏"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="bottom"
                android:background="@color/divider" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/photoEntry"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:cardCornerRadius="0dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical|left"
                android:scaleType="center"
                android:src="@drawable/ic_photo_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left|top"
                android:layout_marginLeft="72dp"
                android:paddingTop="12dp"
                android:text="摄影作品"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left|bottom"
                android:layout_marginLeft="72dp"
                android:paddingBottom="14dp"
                android:text="优选清新风格的摄影作品"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="bottom"
                android:background="@color/divider" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/musicEntry"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:cardCornerRadius="0dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical|left"
                android:scaleType="center"
                android:src="@drawable/ic_music_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left|top"
                android:layout_marginLeft="72dp"
                android:paddingTop="12dp"
                android:text="情感音乐"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left|bottom"
                android:layout_marginLeft="72dp"
                android:paddingBottom="14dp"
                android:text="品味情感人生"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="bottom"
                android:background="@color/divider" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/movieEntry"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:cardCornerRadius="0dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical|left"
                android:scaleType="center"
                android:src="@drawable/ic_movie_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left|top"
                android:layout_marginLeft="72dp"
                android:paddingTop="12dp"
                android:text="影视鉴赏"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left|bottom"
                android:layout_marginLeft="72dp"
                android:paddingBottom="14dp"
                android:text="抓住每一个细节"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="bottom"
                android:background="@color/divider" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/questionEntry"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:cardCornerRadius="0dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical|left"
                android:scaleType="center"
                android:src="@drawable/ic_question_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left|top"
                android:layout_marginLeft="72dp"
                android:paddingTop="12dp"
                android:text="问答"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left|bottom"
                android:layout_marginLeft="72dp"
                android:paddingBottom="14dp"
                android:text="情感、工作、生活的疑难杂症"
                android:textColor="@color/grey"
                android:textSize="14sp" />

        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_navigation_height" />

    </LinearLayout>

</ScrollView>
